{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<article
  class="rounded-lg border border-gray-100 bg-white p-4 shadow-xs transition hover:shadow-lg sm:p-6"
>
    <h3 class="mt-0.5 text-lg font-medium text-gray-900">
      {{ article.title }}
    </h3>
    <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
        {{ article.content }}
    </p>
    <p class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
        {{ article.author.firstname }} {{ article.author.lastname }}
    </p>
    {% for category in article.categories %} 
        <p class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
            {{ category.name }}
        </p>
    {% endfor %}
        <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
            {{ article.createAt | date("d/m/Y") }}
      </p>
</article>
{% endblock %}
